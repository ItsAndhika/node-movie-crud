<div class="row">
	<div class="col-md-8">
		<h1>Movie List</h1>
		<% if (msg.length !== 0) { %>
		<div class="alert alert-success" role="alert"><%= msg %></div>
		<% } %>
		<a href="/add" class="btn btn-primary mb-2">Add movie data</a>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Year</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% let num = 1 %> <% movies.forEach(movie => { %>
				<tr>
					<th scope="row"><%= num++ %></th>
					<td><%= movie.title %></td>
					<td><%= movie.year %></td>
					<td class="d-flex flex-row">
						<form action="/delete?_method=DELETE" method="post">
							<input type="hidden" name="id" value="<%= movie._id %>" />
							<button
								type="submit"
								class="btn btn-danger badge me-2"
								onclick="return confirm('Are you sure?')"
							>
								Delete
							</button>
							<a href="/details/<%= movie._id %>" class="btn btn-primary badge"
								>Details</a
							>
						</form>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>
