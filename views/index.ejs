<div class="row">
	<div class="col-md-8">
		<h1>Movie List</h1>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Year</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% movies.forEach(movie => { %>
				<tr>
					<th scope="row">1</th>
					<td><%= movie.title %></td>
					<td><%= movie.year %></td>
					<td>
						<a href="/details" class="btn btn-primary badge">Details</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>
